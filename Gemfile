  gem 'jekyll-last-modified-at'
  # gem 'jekyll-multiple-languages'
  gem 'jekyll-mentions'
  gem 'jemoji'
  gem 'jekyll-redirect-from'
  gem 'jekyll-sitemap', '=0.12.0', :platforms => [:ruby, :x64_mingw, :mswin]
  gem 'jekyll-paginate'
end
